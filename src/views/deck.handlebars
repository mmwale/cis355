<div class="container">
  <header class="app-header">
    <h1 class="logo">FlashLearn</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/decks">My Decks</a>
      {{#if user}}
        <a href="/logout">Logout</a>
      {{else}}
        <a href="/login">Login</a>
      {{/if}}
    </nav>
    <div class="search-bar">
      <input type="text" placeholder="Search...">
    </div>
  </header>

  <main class="deck-detail">
    <div class="deck-header">
      <h2>{{deck.title}}</h2>
      <div class="deck-actions">
        <a href="/decks/{{deck.id}}/edit" class="btn-edit">Edit Deck</a>
        <form action="/decks/{{deck.id}}/delete" method="POST" class="inline-form">
          <button type="submit" class="btn-delete">Delete Deck</button>
        </form>
        <a href="/decks/{{deck.id}}/study" class="btn-study">Study Now</a>
        <a href="/decks/{{deck.id}}/flashcards/new" class="btn-add">+ Add Flashcard</a>
      </div>
    </div>

    <div class="flashcards-list">
      {{#each deck.Flashcards}}
        <div class="flashcard-item">
          <div class="flashcard-content">
            <h3>{{this.question}}</h3>
            <p class="answer-preview">{{truncate this.answer 50}}</p>
          </div>
          <div class="flashcard-actions">
            <a href="/flashcards/{{this.id}}/edit" class="btn-edit">Edit</a>
            <form action="/flashcards/{{this.id}}/delete" method="POST" class="inline-form">
              <button type="submit" class="btn-delete">Delete</button>
            </form>
          </div>
        </div>
      {{/each}}
    </div>
  </main>

  <footer class="app-footer">
    <p>Â© 2023 FlashLearn. Study smarter.</p>
  </footer>
</div>

