<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<header style="background-color: #ede0d4; padding: 20px;">
  <div class="logo" style="font-size: 24px; color: #116466;" >FlashLearn</div>
  <nav>
    <a href="/" style="color: #116466; margin-right: 15px;">Home</a>
    {{#if user}}
      <a href="/decks" style="color: #116466; margin-right: 15px;">My Decks</a>
      <a href="/auth/logout" style="color: #116466;">Logout</a>
    {{else}}
      <a href="/auth/login" style="color: #116466;">Login</a>
    {{/if}}
  </nav>
</header>

<main>
  <h1>Welcome To FlashLearn</h1>
  {{#if user}}
    <h2>My Decks</h2>
    <a href="/decks/new" class="create-deck">+ Create New Deck</a>
    <div class="deck-grid">
      {{#each decks}}
        <div class="deck-card">
          <h3>{{this.title}}</h3>
          <p>{{this.Flashcards.length}} cards</p>
          <a href="/decks/{{this.id}}">View Deck</a>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p>Please <a href="/auth/login">log in</a> to view your decks.</p>
  {{/if}}
</main>

