<header>
  <div class="logo">FlashLearn</div>
  <nav>
    <a href="/">Home</a>
    <a href="/decks">My Decks</a>
    {{#if user}}
      <a href="/logout">Logout</a>
    {{else}}
      <a href="/login">Login</a>
    {{/if}}
  </nav>
  <div class="search">
    <input type="text" placeholder="Search decks...">
  </div>
</header>

<main>
  <h1>My Decks</h1>
  <a href="/decks/new" class="create-deck">+ Create New Deck</a>
  
  <div class="deck-grid">
    {{#each decks}}
      <div class="deck-card">
        <h3>{{this.title}}</h3>
        <p>{{this.Flashcards.length}} cards</p>
        <a href="/decks/{{this.id}}">View Deck</a>
      </div>
    {{/each}}
  </div>
</main>

