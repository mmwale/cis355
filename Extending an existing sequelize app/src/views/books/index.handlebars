<h1>Books</h1>

<div class="row mb-4">
    <div class="col">
        <a href="/books/new" class="btn btn-primary">Add New Book</a>
    </div>
</div>

<div class="row">
    {{#if books.length}}
        {{#each books}}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">By {{author}}</h6>
                        <p class="card-text">
                            <strong>ISBN:</strong> {{isbn}}<br>
                            <strong>Published:</strong> {{publishedYear}}
                        </p>
                        {{#if description}}
                            <p class="card-text">{{description}}</p>
                        {{/if}}
                        <div class="btn-group">
                            <a href="/books/view/{{id}}" class="btn btn-info">View</a>
                            <a href="/books/{{id}}/edit" class="btn btn-warning">Edit</a>
                            <form class="d-inline" action="/books/{{id}}/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this book?')">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="col">
            <p>No books found. <a href="/books/new">Add one now</a>!</p>
        </div>
    {{/if}}
</div> 