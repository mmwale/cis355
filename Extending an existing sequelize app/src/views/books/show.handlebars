<div class="card">
    <div class="card-body">
        <h1 class="card-title">{{book.title}}</h1>
        <h6 class="card-subtitle mb-3 text-muted">By {{book.author.name}}</h6>

        <div class="row mb-4">
            <div class="col-md-6">
                <p><strong>ISBN:</strong> {{book.isbn}}</p>
                <p><strong>Published Year:</strong> {{book.publishedYear}}</p>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col">
                <h5>Categories</h5>
                {{#each book.categories}}
                    <span class="badge bg-secondary">{{this.name}}</span>
                {{/each}}
            </div>
        </div>

        {{#if book.description}}
        <div class="row mb-4">
            <div class="col">
                <h5>Description</h5>
                <p>{{book.description}}</p>
            </div>
        </div>
        {{/if}}

        <div class="btn-group">
            <a href="/books/{{book.id}}/edit" class="btn btn-warning">Edit</a>
            <form class="d-inline" action="/books/{{book.id}}/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this book?')">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a href="/books" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
